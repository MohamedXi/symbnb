<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Welcome!{% endblock %} | Symbnb</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.min.css" />
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.8.1/css/all.css"
              integrity="sha384-Bx4pytHkyTDy3aJKjGkGoHPt3tvv6zlwwjc3iqN7ktaiEMLDPqLSZYts2OjKcBx1" crossorigin="anonymous">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
{# ------ The main contents ------ #}
<div class="sl-mainpanel">
    {% include 'admin/partials/sidebar.html.twig' %} {# Call the sidebar #}
    {% include 'admin/partials/header.html.twig' %} {# Call the header #}

    {# The breadcrumb #}
    <nav class="breadcrumb sl-breadcrumb">
        <a class="breadcrumb-item" href="index.html">Starlight</a>
        <span class="breadcrumb-item active">Dashboard</span>
    </nav>
    {# The contents pages #}
    <div class="sl-pagebody">{% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} fade show align-items-center" role="alert">
                <i class="fa fa-check-circle alert-icon mr-3"></i>
                {% for message in messages %}
                    {{ message | striptags }}
                {% endfor %}
                <button type="button" class="close" aria-label="Close" data-dismiss="alert">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
        {% endfor %}

        {% block content %}
            {# The contents is load here #}
        {% endblock %}
    </div>
    {% include 'admin/partials/footer.html.twig' %} {# Call the footer #}
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
