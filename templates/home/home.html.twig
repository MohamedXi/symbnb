{% extends 'base.html.twig' %}

{% block title %}Welcome to the best website of ads{% endblock %}

{% block body %}
    <div class="container-fluid p-0">
        <!-- Jumbotron Section -->
        <div class="container py-5 pt-lg-6 d-flex align-items-center position-relative zindex-100">
            <div class="col">
                <div class="row">
                    <div class="col-lg-5 col-xl-6 text-center text-lg-left">
                        <div class="d-none d-lg-block mb-4 ">
                            <div class="alert alert-modern alert-dark">
                                        <span class="badge badge-danger badge-pill">
                                            Hot
                                        </span>
                                <span class="alert-content">Dark mode, awesome shortcode library and more.</span>
                            </div>
                        </div>
                        <div>
                            <h2 class="mb-4 text-dark">
                                <span class="display-4 font-weight-light">See it. Love it</span>
                                <span class="d-block">Purpose <strong class="font-weight-light">Website UI Kit</strong></span>
                            </h2>
                            <p class="lead text-dark">A unique and beautiful collection of UI elements that are all
                                flexible and modular. A complete and customizable solution to building the website of
                                your dreams.</p>
                            <div class="mt-4">
                                <a href="{{ path('ads_create') }}"
                                   class="btn btn-dark rounded-pill hover-translate-y-n3 btn-icon mr-sm-4 scroll-me px-4">
                                    <span class="btn-inner--text">Ad a new ad</span>
                                    <span class="btn-inner--icon"><i class="far fa-angle-right"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="container-fluid py-xl-5">
            <div class="has-divider bg-primary-alt">
                <div class="container">
                    <div class="row justify-content-around">
                        <div class="col-xl-3 col-lg-4 col-md-3 d-flex mb-5 mb-md-0 aos-init aos-animate"
                             data-aos="fade-right">
                            <div class="row justify-content-center">
                                <div class="col-8 col-md">
                                    <div class="mobile-screenshot rotate-left layer-2">
                                        {#<img src="assets/img/food-app-1.png" alt="Screenshot">#}
                                        {#<img src="assets/img/iphone-xr.svg" alt="iPhone XR">#}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-8 d-flex flex-column justify-content-xl-between">
                            <div class="mb-4">
                                <span class="badge badge-primary">New in V2</span>
                                <h3 class="h1 mt-3">
                                    Advertise features of your mobile application.
                                </h3>
                                <p class="lead">
                                    Quis autem vel eum iure reprehenderit qui in ea voluptate velit esse quam nihil
                                    molestiae.
                                </p>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="mt-3">
                                        <h5>Smart Features</h5>
                                    </div>
                                    <p>
                                        Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium.
                                    </p>
                                </div>
                                <div class="col-6">
                                    <div class="mt-3">
                                        <h5>Connectivity</h5>
                                    </div>
                                    <p>
                                        Voluptatem accusantium doloremque laudantium, totam rem aperiam.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Best rent section-->
        <div class="container-fluid py-xl-5">
            <div class="container space-top-3 space-bottom-md-3 space-bottom-2">
                <!-- Title row -->
                <div class="w-md-80 w-lg-50 text-center">
                    <span class="btn btn-xs btn-soft-success btn-pill mb-2">What we do?</span>
                    <h2>Front makes designing easy and performance fast</h2>
                </div>
                <div class="w-md-60 w-lg-50 text-center mx-auto">
                    <h4 class="h5">
                        It is fast and easy. <span class="font-weight-normal">Create your first and ongoing website with Front.</span>
                    </h4>
                </div>

                <div class="w-50 w-md-40 w-lg-30 text-center mx-auto">
                    <p class="small">We are launching soon. Join the priority list for information and early access.</p>
                </div>
                <!-- End title row -->

                <!-- Card row -->
                <div class="row mt-5">
                    {% for data in ads %}
                        {% include 'ad/_ad.html.twig' with {'ad': data.annonce} %}
                    {% endfor %}
                </div>
                <!-- Card row -->
            </div>
        </div>
        <!-- End best rent -->

        <!-- Best user section-->
        <div class="container-fluid py-xl-5">
            <div class="container space-top-3 space-bottom-md-3 space-bottom-2">
                <!-- Title row -->
                <div class="w-md-80 w-lg-50 text-center mx-md-auto">
                    <span class="btn btn-xs btn-soft-success btn-pill mb-2">What we do?</span>
                    <h2>Front makes designing easy and performance fast</h2>
                </div>
                <div class="w-md-60 w-lg-50 text-center mx-auto">
                    <h4 class="h5">
                        It is fast and easy. <span class="font-weight-normal">Create your first and ongoing website with Front.</span>
                    </h4>
                </div>

                <div class="w-50 w-md-40 w-lg-30 text-center mx-auto">
                    <p class="small">We are launching soon. Join the priority list for information and early access.</p>
                </div>
                <!-- End title row -->

                <!-- Card row -->
                <div class="card-columns">
                    {% for data in users %}
                        <a href="{{ path('user_show', {'slug': data.user.slug}) }}">
                            <div class="card bg-gradient-success">
                                <div class="card-body">
                                    <img class="avatar rounded-circle mr-2 d-inline-block text-left" alt="Image placeholder" src="{{ data.user.picture }}" style="height: 50px">
                                    <p class="card-text d-inline-block text-white text-left">{{ data.user.fullName }}</p>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
                <!-- Card row -->
            </div>
        </div>
        <!-- End best user section -->


    </div>
{% endblock %}
