{% extends 'admin/base.html.twig' %}

{% block title %}Edit comment number {{ comment.id }}{% endblock %}

{% block body %}
    {% block content %}
        <div class="card pd-20 pd-sm-40 mg-t-20">
            <h6 class="card-body-title">Comment edit</h6>
            <p class="mg-b-20">Edit comment number {{ comment.id }}</p>
            <div class="card card-body bg-gray-200 mg-sm-b-30">
                <p class="card-text">
                    <span class="font-weight-bold">Comment linked at :</span> {{ comment.ad.title }}
                    <br/>
                    <span class="font-weight-bold">Author of this ad :</span> {{ comment.author.fullName }}
                    <br/>
                    <span class="font-weight-bold">Comment created at :</span> {{ comment.createdAt | date('d/m/Y') }}
                    <br/>
                    <span class="font-weight-bold">Comment rating :</span> {{ comment.rating }}<br/>
                </p>
            </div>
            {{ form_start(form) }}
            <div class="form-layout">
                <div class="row mg-b-25">
                    <div class="col-lg-12">
                        <div class="form-group mg-b-10-force">
                            {{ form_label(form.content) }}
                            {{ form_widget(form.content) }}
                            {{ form_errors(form.content) }}
                        </div>
                    </div><!-- col-8 -->
                </div><!-- row -->

                <div class="form-layout-footer align-items-end">
                    <button type="submit" class="btn btn-info">Save the ad</button>
                </div><!-- form-layout-footer -->
            </div><!-- form-layout -->
            {{ form_end(form) }}
        </div>
