{% extends 'base.html.twig' %}

{% block title %}{{ ad.title }}{% endblock %}

{% block body %}
    <div class="container-fluid m-0 p-0">
        <section class="py-5 d-flex align-items-end isHeaderTitle" style="background-size: cover; background-image: linear-gradient(rgba(0, 62, 128, 0.5), rgba(0, 62, 128, 0.5)), url('{{ ad.coverImage }}');">
            <div class="container overlay-content">
                <div class="d-flex justify-content-between align-items-start flex-column flex-lg-row align-items-lg-end">
                    <div class="text-white mb-4 mb-lg-0">
                        <h1 class="text-shadow verified">{{ ad.title }}</h1>
                        <p><i class="fa-map-marker-alt fas mr-2"></i> 53 Broadway, Brooklyn, NY 1129</p>
                        <p class="mb-0 d-flex align-items-center"><i class="fa fa-xs fa-star text-primary"></i><i class="fa fa-xs fa-star text-primary"></i><i class="fa fa-xs fa-star text-primary"></i><i class="fa fa-xs fa-star text-primary"></i><i class="fa fa-xs fa-star text-gray-200 mr-4">                   </i>8 Reviews</p>
                    </div>
                    <div class="calltoactions"><a href="#leaveReview" onclick="$('#leaveReview').collapse('show')" data-smooth-scroll="" class="btn btn-primary">booking</a></div>
                </div>
            </div>
        </section>
        <section class="py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <!-- About Listing-->
                        <div class="text-block">
                            <h3 class="mb-3">Description of this offer</h3>
                            <p>{% autoescape 'html' %}
                                    {{ ad.content|striptags}}
                                {% endautoescape %}</p>
                        </div>

                        <div class="text-block mt-5">
                            <!-- Gallery-->
                            <h3 class="mb-4">Gallery</h3>
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    {% for image in ad.images %}
                                        <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="{% if loop.first %}active{% endif %}"></li>
                                    {% endfor %}
                                </ol>
                                <div class="carousel-inner">
                                    {% for image in ad.images %}
                                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                                            <img class="d-block w-100" src="{{ image.url }}" alt="First slide">
                                            <div class="carousel-caption d-none d-md-block">
                                                <h5>{{ ad.title }}</h5>
                                                <p>image.caption</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <!-- Amenities-->
                        <div class="text-block mt-5">
                            <h3 class="mb-4">Amenities</h3>
                            <ul class="amenities-list list-inline">
                                <li class="list-inline-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fal fa-arrow-alt-square-up pr-2"></i>
                                        <span>Elevator</span>
                                    </div>
                                </li>
                                <li class="list-inline-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fal fa-salad pr-2"></i>
                                        <span>Vegan friendly</span>
                                    </div>
                                </li>
                                <li class="list-inline-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fal fa-wine-bottle pr-2"></i>
                                        <span>Alcohol served</span>
                                    </div>
                                </li>
                                <li class="list-inline-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fal fa-smoking-ban pr-2"></i>
                                        <span>No smoking</span>
                                    </div>
                                </li>
                                <li class="list-inline-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fal fa-parking pr-2"></i>
                                        <span>Parking spaces (paid)</span>
                                    </div>
                                </li>
                                <li class="list-inline-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fal fa-wifi pr-2"></i>
                                        <span>WiFi</span>
                                    </div>
                                </li>
                            </ul>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <div class="pl-xl-4">


                            <!-- Contact-->
                            <div class="card border-0 mb-5">
                                <div class="card-header border-0">
                                    <h4 class="mb-0">Contact</h4>
                                </div>
                                <div class="card-body">
                                    <div class="card-text">
                                        <img class="float-left mr-3 rounded-circle" src="http://placehold.it/64x64" alt="Avatar">
                                        <p class="h5 m-0 p-0">Antoine Dupont</p>
                                        <p class="p-0 small">With supporting</p>
                                    </div>
                                    <ul class="list-unstyled my-4">
                                        <li class="mb-2"> <a href="#" class="text-gray-00 text-sm text-decoration-none"><i class="fa fa-phone mr-3"></i><span class="text-muted">(020) 123 456 789</span></a></li>
                                        <li class="mb-2"> <a href="#" class=" text-sm text-decoration-none"><i class="fa fa-envelope mr-3"></i><span class="text-muted">info@example.com</span></a></li>
                                        <li class="mb-2"> <a href="#" class=" text-sm text-decoration-none"><i class="fa fa-globe mr-3"></i><span class="text-muted">www.example.com</span></a></li>
                                        <li class="mb-2"> <a href="#" class="text-blue text-sm text-decoration-none"><i class="fab fa-facebook mr-3"></i><span class="text-muted">Facebook</span></a></li>
                                        <li class="mb-2"> <a href="#" class=" text-sm text-decoration-none"><i class="fab fa-twitter mr-3"></i><span class="text-muted">Twitter</span></a></li>
                                        <li class="mb-2"> <a href="#" class=" text-sm text-decoration-none"><i class="fab fa-instagram mr-3"></i><span class="text-muted">Instagram</span></a></li>
                                        <li class="mb-2"> <a href="#" class=" text-sm text-decoration-none"><i class="fab fa-google-plus mr-3"></i><span class="text-muted">Google+</span></a></li>
                                    </ul>
                                    <div class="text-center"><a href="#" class="btn btn-outline-primary btn-block"> <i class="far fa-paper-plane mr-2"></i>Send a Message</a></div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}