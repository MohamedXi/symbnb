{% block _annonce_images_widget %}
    <p>You can add your images here</p>
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0"/>

    <div class="class">
        <button type="button" id="add-image" class="btn btn-primary">add an image</button>
    </div>
{% endblock %}

{% block _annonce_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _annonce_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-11">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
            <button type="button" data-action="delete" data-target="#block_{{ id }}"
                    class="btn btn-danger col-1"><i class="fal fa-trash-alt"></i></button>
        </div>
    </div>
{% endblock %}