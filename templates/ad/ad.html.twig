{% extends 'base.html.twig' %}

{% block title %}Our beautiful ads{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Best rent section-->

        <div class="container-fluid py-xl-5">
            <div class="container space-top-3 space-bottom-md-3 space-bottom-2">
                <!-- Title row -->
                <div class="w-md-80 w-lg-50 text-center mx-md-auto">
                    <span class="mb-2 h4">What we do?</span>
                    <h2 class="h1">Front makes designing easy and performance fast</h2>
                </div>
                <div class="w-md-60 w-lg-50 text-center mx-auto">
                    <h4 class="h3">
                        It is fast and easy. <span class="font-weight-normal">Create your first and ongoing website with Front.</span>
                    </h4>
                    <p>We are launching soon. Join the priority list for information and early access.</p>
                </div>
                <!-- End title row -->

                    <!-- Card row -->
                    <div class="row mt-5">
                        {% for ad in ads %}

                            {% set adUrl = path('ads_show', {'slug': ad.slug}) %}

                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-header text-center">
                                    <span class="font-weight-bold">{{ ad.price }}&euro;/night</span> | {{ ad.rooms }} bedrooms
                                </div>
                                <a href="{{ adUrl }}">
                                    <img src="{{ ad.coverImage }}" alt="Home image"
                                         style="height: 100%; width: 100%; display: block">
                                </a>
                                <div class="card-body">
                                    <a class="text-decoration-none text-dark" href="{{ adUrl }}">
                                        <h3 class="card-title">{{ ad.title|length > 25? ad.title|slice(0, 25) ~ '…' : ad.title  }}</h3>
                                    </a>
                                    <h4 class="card-subtitle text-muted">No reviews yet</h4>
                                    <a class="text-decoration-none text-black-50" href="{{ adUrl }}">
                                        <p class="card-text py-3">{{ ad.introduction|length > 70? ad.introduction|slice(0, 70) ~ '…' : ad.introduction}}</p>
                                    </a>
                                    <a href="{{ path('ads_show', {'slug': ad.slug}) }}" class="card-link">See more</a>
                                    <a href="#" class="card-link">Share to friend</a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <!-- Card row -->
            </div>
        </div>
        <!-- End best rent -->
    </div>
{% endblock %}
